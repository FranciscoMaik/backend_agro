{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "paths": {
      "@libs/*": ["./libs/*"],
      "@infra/*": ["./infra/*"],
      "@application/*": ["./application/*"],
      "@controllers/*": ["./application/controllers/*"],
      "@repositories/*": ["./application/repositories/*"],
    }
  }
}