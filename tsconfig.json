{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "paths": {
      "@libs": ["./libs/index"],
      "@utils/*": ["./utils/*"],
      "@infra/*": ["./infra/*"],
      "@application/*": ["./application/*"],
      "@shared/*": ["./application/@shared/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"],
}