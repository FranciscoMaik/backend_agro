{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    
    "baseUrl": ".",
    "paths": {
      "@libs": ["src/libs/index"],
      "@utils/*": ["src/utils/*"],
      "@infra/*": ["src/infra/*"],
      "@application/*": ["src/application/*"],
      "@shared/*": ["src/application/@shared/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}